model Profile {
  id                  Int    @id @default(autoincrement())
  name                String
  gender              String
  address             String
  profile_picture_url String?

  user_id             Int    @unique
  user                User   @relation(fields: [user_id], references: [id], onDelete: Cascade)

  deletedAt           DateTime?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@map("profiles")
}
