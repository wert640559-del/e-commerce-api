model Product {
    id          Int     @id @default(autoincrement())
    name        String
    description String?
    price       Decimal @db.Decimal(10, 2)
    stock       Int     @default(0)
    image       String  

    categoryId Int?
    category   Category? @relation(fields: [categoryId], references: [id])

    createdAt  DateTime     @default(now())
    updatedAt  DateTime     @updatedAt
    deletedAt  DateTime?
    orderItems OrderItems[]

    @@map("products")
}